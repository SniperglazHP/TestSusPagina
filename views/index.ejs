<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gesti칩n de Usuarios</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Gesti칩n de Usuarios</h1>

  <!-- Formulario para agregar un nuevo usuario -->
  <form action="/add" method="POST">
    <input type="text" name="name" placeholder="Nombre" required>
    <input type="text" name="password" placeholder="Contrase침a" required>
    <input type="text" name="image" placeholder="URL de Imagen">
    <button type="submit">Agregar Usuario</button>
  </form>

  <!-- Lista de usuarios -->
  <ul>
    <% users.forEach(user => { %>
      <li>
        <img src="<%= user.image %>" alt="Imagen de <%= user.name %>" style="width: 50px; height: 50px;">
        <strong><%= user.name %></strong> - Contrase침a: <%= user.password %>
        <form action="/edit/<%= user.id %>" method="POST" style="display: inline;">
          <input type="text" name="name" value="<%= user.name %>" required>
          <input type="text" name="password" value="<%= user.password %>" required>
          <input type="text" name="image" value="<%= user.image %>">
          <button type="submit">Editar</button>
        </form>
        <form action="/delete/<%= user.id %>" method="POST" style="display: inline;">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
